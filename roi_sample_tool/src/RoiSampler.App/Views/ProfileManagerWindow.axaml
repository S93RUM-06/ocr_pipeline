<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RoiSampler.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="RoiSampler.App.Views.ProfileManagerWindow"
        x:DataType="vm:ProfileManagerViewModel"
        Title="Profile 管理"
        Width="900" Height="600">

    <Design.DataContext>
        <vm:ProfileManagerViewModel/>
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具列 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <Button Content="新增 Profile" Command="{Binding CreateNewProfileCommand}"/>
            <Button Content="複製" Command="{Binding CloneProfileCommand}"/>
            <Button Content="儲存" Command="{Binding SaveProfileCommand}"/>
            <Button Content="刪除" Command="{Binding DeleteProfileCommand}"/>
            <Separator/>
            <Button Content="重新載入" Command="{Binding LoadProfilesCommand}"/>
        </StackPanel>

        <!-- 主要內容 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：Profile 列表 -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0" Padding="0,0,10,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="Profile 列表" FontSize="14" FontWeight="Bold"/>
                    <ListBox ItemsSource="{Binding Profiles}"
                             SelectedItem="{Binding SelectedProfile}"
                             Height="450">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding ProfileName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DocumentType}" FontSize="10" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Fields.Count, StringFormat='{}{0} 個欄位'}" FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- 右側：Profile 詳細資訊 -->
            <ScrollViewer Grid.Column="1" Padding="10,0,0,0">
                <StackPanel Spacing="10" IsEnabled="{Binding SelectedProfile, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="Profile 詳細資訊" FontSize="16" FontWeight="Bold"/>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Profile 名稱:"/>
                        <TextBox Text="{Binding SelectedProfile.ProfileName}" 
                                 IsReadOnly="{Binding !IsEditing}"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="說明:"/>
                        <TextBox Text="{Binding SelectedProfile.Description}" 
                                 IsReadOnly="{Binding !IsEditing}"
                                 Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="文件類型:"/>
                        <TextBox Text="{Binding SelectedProfile.DocumentType}" 
                                 IsReadOnly="{Binding !IsEditing}"/>
                    </StackPanel>

                    <Separator/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="欄位定義" FontSize="14" FontWeight="Bold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                            <Button Content="新增欄位" Command="{Binding AddFieldCommand}" IsEnabled="{Binding IsEditing}"/>
                            <Button Content="編輯" Command="{Binding StartEditCommand}" IsVisible="{Binding !IsEditing}"/>
                            <Button Content="取消" Command="{Binding CancelEditCommand}" IsVisible="{Binding IsEditing}"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid ItemsSource="{Binding SelectedFields}" 
                              Height="300" 
                              IsReadOnly="{Binding !IsEditing}"
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="欄位名稱" Binding="{Binding FieldName}" Width="150"/>
                            <DataGridTextColumn Header="顯示名稱" Binding="{Binding DisplayName}" Width="120"/>
                            <DataGridTextColumn Header="資料類型" Binding="{Binding DataType}" Width="100"/>
                            <DataGridCheckBoxColumn Header="必填" Binding="{Binding Required}" Width="60"/>
                            <DataGridTextColumn Header="正則表達式" Binding="{Binding Pattern}" Width="150"/>
                            <DataGridTemplateColumn Header="操作" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="刪除" 
                                                Command="{Binding $parent[Window].((vm:ProfileManagerViewModel)DataContext).DeleteFieldCommand}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[Window].((vm:ProfileManagerViewModel)DataContext).IsEditing}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 狀態列 -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10,5" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="Black"/>
        </Border>
    </Grid>
</Window>
